{
  "manifest_version": 3,

  "name": "Chrome Extension TypeScript Starter",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://courses.webdevsimplified.com/view/courses/*"],
      "js": ["js/vendor.js", "js/content_script.js"]
    },
    {
      "matches": ["https://customer-010kwcw7rkskh8op.cloudflarestream.com/*"],
      "js": ["js/vendor.js", "js/iframe_script.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://courses.webdevsimplified.com/view/courses/*"]
}
